<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_colors"
    android:orientation="vertical"
    >


    <Button
        android:id="@+id/button"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:src="@drawable/ic_pencile"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="95dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="122dp"
        android:layout_height="123dp"
        android:layout_centerVertical="true"
        android:src="@drawable/abhi"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/sign_up_btn1"

        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_rounded_corners"
        android:drawableLeft="@drawable/ic_group_add"
        android:paddingLeft="10dp"
        android:text="Refer Friends"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="197dp" />

    <Button

        android:id="@+id/sign_up_btn2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:drawableLeft="@drawable/ic_wb_sunny"
        android:paddingLeft="10dp"
        android:text="0 Flames"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="197dp" />

    <Button
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_radio"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="left|center_vertical"
        android:id="@+id/sign_up_btn3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Did you known"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="268dp" />

    <Button
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_leader"
        android:gravity="left|center_vertical"
        android:id="@+id/sign_up_btn4"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Leaderboard"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_profile"
        android:gravity="left|center_vertical"
        android:id="@+id/sign_up_btn5"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="My Profile"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="405dp" />

    <Button
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_preferences"
        android:gravity="left|center_vertical"
        android:id="@+id/sign_up_btn6"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Preferences"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="473dp" />

    <Button
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_support"
        android:gravity="left|center_vertical"
        android:id="@+id/sign_up_btn7"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Support"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="536dp" />

    <Button
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_call"
        android:gravity="left|center_vertical"
        android:id="@+id/sign_up_btn8"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Speak to the CEO"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="607dp" />

    <ImageView
        android:clickable="true"
        android:id="@+id/imageView"
        android:layout_width="76dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/explore"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="672dp" />

    <ImageView
        android:clickable="true"
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/chat"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="672dp" />

    <ImageView
        android:clickable="true"
        android:id="@+id/imageView3"
        android:layout_width="104dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/alert"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="672dp" />

    <ImageView
        android:clickable="true"
        android:id="@+id/imageView4"
        android:layout_width="63dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/user"
        tools:layout_editor_absoluteX="333dp"
        tools:layout_editor_absoluteY="670dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="20 referred friend"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="154dp"
        android:layout_height="42dp"
        android:text="Abhishek"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="62dp" />




</android.support.constraint.ConstraintLayout>